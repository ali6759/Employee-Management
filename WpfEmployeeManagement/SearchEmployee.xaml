<Window x:Class="WpfEmployeeManagement.SearchEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEmployeeManagement"
        mc:Ignorable="d"
        Title="SearchEmployee" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="2" Background="Beige">
            <DockPanel Margin ="10">
                <Label Margin="20" FontWeight="Bold" FontSize="20">Search Employee by Name</Label>
                <TextBox TextWrapping="Wrap" x:Name="txtEmployeeName" FontSize="20" Text="" Width="403"/>
            </DockPanel>
            <DockPanel Width="232">
                <Button Content="Search" FontSize="20" Name="btnSearch" Height="64" Width="140" Click="btnSearch_Click"/>
            </DockPanel>
            <Label Margin="20"  FontSize="20" Content="" Name="lblEmployee" Height="201" Width="642" />

        </StackPanel>
    </Grid>
</Window>
